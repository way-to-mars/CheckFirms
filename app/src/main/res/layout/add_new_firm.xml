              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="4"
              android:text="explanation text message. Just to fill the space.\n101\n404" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Meaningless" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="4"
              android:text="explanation text message. Just to fill the space.\n101\n404" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Meaningless" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="4"
              android:text="explanation text message. Just to fill the space.\n101\n404" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Meaningless" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="4"
              android:text="explanation text message. Just to fill the space.\n101\n404" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Meaningless" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="4"
              android:text="explanation text message. Just to fill the space.\n101\n404" />
          </LinearLayout>

        </LinearLayout>
      </ScrollView>
    </LinearLayout>

  </androidx.cardview.widget.CardView>

  <Button
    android:id="@+id/anf_apply_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="20dp"
    android:text="Apply" />


</LinearLayout>