<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:scrollbarSize="4dp">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingHorizontal="20dp"
      android:paddingVertical="30dp">

      <EditText
        android:id="@+id/anf_edittext_inn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:autofillHints="2466000000"
        android:hint="@string/anf_inn_hint"
        android:inputType="number"
        android:minHeight="48dp" />

      <Button
        android:id="@+id/anf_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="2"
        android:text="@string/anf_search_button"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="20dp"
    android:layout_weight="1"
    app:cardCornerRadius="20dp"
    tools:ignore="InefficientWeight">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="20dp">

      <ProgressBar
          android:id="@+id/anf_progress_bar"
          style="?android:attr/progressBarStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_weight="1"
        android:visibility="gone"/>

      <ScrollView
        android:id="@+id/anf_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          tools:ignore="ScrollViewSize">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Short Name" />

            <TextView
              android:id="@+id/anf_shortname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="2"
              tools:text="Such a beautiful name" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Long Name" />

            <TextView
              android:id="@+id/anf_longname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="3"
              tools:text="This name is as long as the longest name in the whole World that the mankind has ever seen in its History" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/anf_chief_position"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Должность" />

            <TextView
              android:id="@+id/anf_chief_fullname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="2"
              tools:text="James Brown Jr" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Given number" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="2"
              tools:text="3.1415926535" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Given number #2" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="2"
              tools:text="6.62607015" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Given name" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:layout_weight="1"
              android:ellipsize="end"
              android:maxLines="2"
              tools:text="explanation text message" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:layout_weight="2"
              android:ellipsize="end"
              android:maxLines="2"
              android:text="Meaningless" />

            <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
